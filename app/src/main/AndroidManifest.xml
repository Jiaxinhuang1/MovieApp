<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp">
        <activity android:name=".VerticalListActivity"
            android:label="Action Genre"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ComedyVerticalListActivity"
            android:label="Comedy Genre"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".DramaVerticalListActivity"
            android:label="Drama Genre"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".HorrorVerticalListActivity"
            android:label="Horror Genre"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".MysteryVerticalListActivity"
            android:label="Mystery Genre"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ThrillerVerticalListActivity"
            android:label="Thriller Genre"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".DetailsVerticalListActivity"
            android:label="Movie Details"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>